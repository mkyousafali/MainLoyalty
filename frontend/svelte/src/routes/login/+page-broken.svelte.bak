    if (error) throw error;

    branches = data.map(branch => ({
      id: branch.id,
      name: branch.name_en,  // Use name_en from schema
      nameAr: branch.name_ar
    }));
  } catch (err) {
    console.error('âŒ Failed to load branches:', err);
  }
}

